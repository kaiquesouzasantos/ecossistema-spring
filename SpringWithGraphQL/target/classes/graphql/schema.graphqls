type Mutation {
    addCategory(category: CategoryInput) : Category
    addProduct(product: ProductInput) : Product
}

type Query {
    categoryById(id: ID): Category
    products: [Product]
}

input CategoryInput {
    name: String!
}

input ProductInput {
    name: String!
    price: Float!
    categoryId: ID!
}

type Category {
    id: ID
    name: String
}

type Product {
    id: ID
    name: String
    price: Float
    category: Category
}